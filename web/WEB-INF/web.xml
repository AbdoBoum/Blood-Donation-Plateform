    </servlet-mapping>

    <servlet>
        <servlet-name>BLOG</servlet-name>
        <servlet-class>Controllers.Blog.BlogServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BLOG</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>


